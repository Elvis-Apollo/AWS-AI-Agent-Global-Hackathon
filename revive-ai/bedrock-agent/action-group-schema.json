{
  "openapi": "3.0.0",
  "info": {
    "title": "Customer Winback Agent API",
    "version": "1.0.0",
    "description": "Action groups for analyzing customer churn and generating personalized win-back campaigns"
  },
  "paths": {
    "/analyzeCustomerChurn": {
      "post": {
        "summary": "Analyze why a customer churned",
        "description": "Analyzes customer data to categorize churn reason and provide insights",
        "operationId": "analyzeCustomerChurn",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "customer_id": {
                    "type": "string",
                    "description": "Unique customer identifier"
                  },
                  "company_name": {
                    "type": "string",
                    "description": "Customer company name"
                  },
                  "subscription_tier": {
                    "type": "string",
                    "enum": ["starter", "growth", "enterprise"],
                    "description": "Subscription level"
                  },
                  "mrr": {
                    "type": "number",
                    "description": "Monthly recurring revenue"
                  },
                  "churn_date": {
                    "type": "string",
                    "description": "Date customer churned (YYYY-MM-DD)"
                  },
                  "cancellation_reason": {
                    "type": "string",
                    "description": "Reason provided for cancellation"
                  }
                },
                "required": ["customer_id", "company_name", "cancellation_reason"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Churn analysis result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "category": {
                      "type": "string",
                      "enum": ["pricing", "features", "onboarding", "competition", "business_closure", "unclear"],
                      "description": "Churn reason category"
                    },
                    "confidence": {
                      "type": "integer",
                      "description": "Confidence score (0-100)"
                    },
                    "insights": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "description": "Key insights about the churn"
                    },
                    "recommendation": {
                      "type": "string",
                      "description": "Tactical recommendation for win-back"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/generateWinbackCampaign": {
      "post": {
        "summary": "Generate personalized win-back email campaign",
        "description": "Creates a 3-email sequence tailored to the customer's churn reason",
        "operationId": "generateWinbackCampaign",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "customer_id": {
                    "type": "string",
                    "description": "Unique customer identifier"
                  },
                  "company_name": {
                    "type": "string",
                    "description": "Customer company name"
                  },
                  "churn_category": {
                    "type": "string",
                    "enum": ["pricing", "features", "onboarding", "competition", "business_closure", "unclear"],
                    "description": "Identified churn category"
                  },
                  "analysis_insights": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "Insights from churn analysis"
                  }
                },
                "required": ["customer_id", "company_name", "churn_category"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Generated campaign",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "emails": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "number": {
                            "type": "integer",
                            "description": "Email sequence number (1-3)"
                          },
                          "subject": {
                            "type": "string",
                            "description": "Email subject line"
                          },
                          "body": {
                            "type": "string",
                            "description": "Email body content"
                          },
                          "cta": {
                            "type": "string",
                            "description": "Call to action"
                          }
                        }
                      },
                      "minItems": 3,
                      "maxItems": 3
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/retrieveCustomerData": {
      "get": {
        "summary": "Retrieve customer data from S3",
        "description": "Gets customer information from uploaded CSV data",
        "operationId": "retrieveCustomerData",
        "parameters": [
          {
            "name": "upload_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Upload batch identifier"
          },
          {
            "name": "customer_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Customer identifier"
          }
        ],
        "responses": {
          "200": {
            "description": "Customer data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "customer_id": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "company_name": {
                      "type": "string"
                    },
                    "subscription_tier": {
                      "type": "string"
                    },
                    "mrr": {
                      "type": "number"
                    },
                    "churn_date": {
                      "type": "string"
                    },
                    "cancellation_reason": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/saveCampaignResults": {
      "post": {
        "summary": "Save campaign results to S3",
        "description": "Stores the generated campaign and analysis for a customer",
        "operationId": "saveCampaignResults",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "upload_id": {
                    "type": "string",
                    "description": "Upload batch identifier"
                  },
                  "customer_id": {
                    "type": "string",
                    "description": "Customer identifier"
                  },
                  "analysis": {
                    "type": "object",
                    "description": "Churn analysis results"
                  },
                  "campaign": {
                    "type": "object",
                    "description": "Generated campaign"
                  }
                },
                "required": ["upload_id", "customer_id", "analysis", "campaign"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Save successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "s3_key": {
                      "type": "string",
                      "description": "S3 object key where data was saved"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
