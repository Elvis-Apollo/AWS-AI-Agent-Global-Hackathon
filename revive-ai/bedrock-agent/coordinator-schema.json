{
  "openapi": "3.0.0",
  "info": {
    "title": "Coordinator Agent Tools",
    "version": "1.0.0",
    "description": "Tools for coordinating multi-agent win-back workflow"
  },
  "paths": {
    "/invokeChurnAnalyzer": {
      "post": {
        "summary": "Invoke Churn Analyzer Agent",
        "description": "Calls the specialist Churn Analyzer agent to analyze customer churn",
        "operationId": "invokeChurnAnalyzer",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "customer_id": {
                    "type": "string",
                    "description": "Customer identifier"
                  },
                  "company_name": {
                    "type": "string",
                    "description": "Company name"
                  },
                  "mrr": {
                    "type": "number",
                    "description": "Monthly recurring revenue"
                  },
                  "subscription_tier": {
                    "type": "string",
                    "description": "Subscription tier"
                  },
                  "churn_date": {
                    "type": "string",
                    "description": "Churn date"
                  },
                  "cancellation_reason": {
                    "type": "string",
                    "description": "Reason for cancellation"
                  }
                },
                "required": ["customer_id", "company_name", "cancellation_reason"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Churn analysis result from specialist agent",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "clv": {
                      "type": "number"
                    },
                    "priority": {
                      "type": "string"
                    },
                    "churn_category": {
                      "type": "string"
                    },
                    "insights": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "recommendation": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/invokeCampaignGenerator": {
      "post": {
        "summary": "Invoke Campaign Generator Agent",
        "description": "Calls the specialist Campaign Generator agent to create win-back campaigns",
        "operationId": "invokeCampaignGenerator",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "customer_id": {
                    "type": "string",
                    "description": "Customer identifier"
                  },
                  "company_name": {
                    "type": "string",
                    "description": "Company name"
                  },
                  "email": {
                    "type": "string",
                    "description": "Customer email"
                  },
                  "churn_analysis": {
                    "type": "object",
                    "description": "Analysis results from churn analyzer"
                  }
                },
                "required": ["customer_id", "company_name", "churn_analysis"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Generated campaign from specialist agent",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "campaign_type": {
                      "type": "string"
                    },
                    "emails": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/makeDecision": {
      "post": {
        "summary": "Make strategic decision on customer handling",
        "description": "Decides whether to escalate to human, automate, or skip based on customer value and churn analysis",
        "operationId": "makeDecision",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "customer_id": {
                    "type": "string",
                    "description": "Customer identifier"
                  },
                  "clv": {
                    "type": "number",
                    "description": "Customer lifetime value"
                  },
                  "priority": {
                    "type": "string",
                    "description": "Priority level (CRITICAL/HIGH/MEDIUM/LOW)"
                  },
                  "churn_category": {
                    "type": "string",
                    "description": "Churn category"
                  },
                  "winback_probability": {
                    "type": "number",
                    "description": "Probability of winning back (0-1)"
                  }
                },
                "required": ["customer_id", "clv", "priority"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Decision on how to handle customer",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "decision": {
                      "type": "string",
                      "enum": ["ESCALATE_TO_HUMAN", "AUTOMATED_CAMPAIGN", "SKIP"]
                    },
                    "reasoning": {
                      "type": "string"
                    },
                    "assigned_to": {
                      "type": "string"
                    },
                    "next_action": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/saveWorkflowResults": {
      "post": {
        "summary": "Save complete workflow results",
        "description": "Saves the entire multi-agent workflow results to S3",
        "operationId": "saveWorkflowResults",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "upload_id": {
                    "type": "string",
                    "description": "Upload batch identifier"
                  },
                  "customer_id": {
                    "type": "string",
                    "description": "Customer identifier"
                  },
                  "workflow_data": {
                    "type": "object",
                    "description": "Complete workflow data including agent decisions and outputs"
                  }
                },
                "required": ["upload_id", "customer_id", "workflow_data"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Save confirmation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "s3_key": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
