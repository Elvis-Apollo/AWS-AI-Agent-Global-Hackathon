{
  "openapi": "3.0.0",
  "info": {
    "title": "Campaign Generator Tools",
    "version": "1.0.0",
    "description": "Tools for generating personalized win-back campaigns"
  },
  "paths": {
    "/generateEmailSequence": {
      "post": {
        "summary": "Generate email campaign sequence",
        "description": "Creates a personalized multi-email win-back campaign based on churn analysis",
        "operationId": "generateEmailSequence",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "customer_id": {
                    "type": "string",
                    "description": "Customer identifier"
                  },
                  "company_name": {
                    "type": "string",
                    "description": "Company name"
                  },
                  "churn_category": {
                    "type": "string",
                    "description": "Churn category from analysis"
                  },
                  "priority": {
                    "type": "string",
                    "description": "Priority level"
                  },
                  "insights": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "Key insights from churn analysis"
                  }
                },
                "required": ["customer_id", "company_name", "churn_category"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Generated email sequence",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "emails": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "sequence": {
                            "type": "integer"
                          },
                          "subject": {
                            "type": "string"
                          },
                          "body": {
                            "type": "string"
                          },
                          "timing": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "campaign_strategy": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/personalizeContent": {
      "post": {
        "summary": "Personalize campaign content",
        "description": "Customizes campaign content based on customer data and behavior",
        "operationId": "personalizeContent",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "customer_id": {
                    "type": "string",
                    "description": "Customer identifier"
                  },
                  "template": {
                    "type": "string",
                    "description": "Email template to personalize"
                  },
                  "customer_data": {
                    "type": "object",
                    "description": "Customer-specific data for personalization"
                  }
                },
                "required": ["customer_id", "template"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Personalized content",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "personalized_content": {
                      "type": "string"
                    },
                    "personalization_tokens": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
